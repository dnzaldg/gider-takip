@using MyEvernote.WebApp
@model MyEvernote.Entities.Category

@{
    ViewBag.Title = "Kategori Ekle";
}

<link href="~/Content/validation-summary.css" rel="stylesheet" />

@using (Html.BeginForm())
{

    <section id="basic-form-layouts">
        <div class="row">
            <div class="col-md-12">
                <div class="card">

                    <div class="card-body">
                        <div class="px-3">

                            @Html.AntiForgeryToken()
                            <div class="form-body">
                                <h4 class="form-section">
                                    <i class="icon-notebook"></i> Kategori Kayıt
                                </h4>
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                <div class="row ">
                                    <div class="form-group col-md-6">
                                        @Html.LabelFor(model => model.CategoryType, htmlAttributes: new { @class = "control-label col-md-5" })
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.CategoryType, new { htmlAttributes = new { @class = "form-control" } })

                                            @*@Html.ValidationMessageFor(model => model.CategoryType, "", new { @class = "text-danger" })*@

                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @Bootstrap.Button("success", string.Empty, "submit", "plus", " Kaydet")

                                    @Bootstrap.LinkButton("/Category/Index", "default", string.Empty, string.Empty, "arrow-left", "Geri Dön!")
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}




