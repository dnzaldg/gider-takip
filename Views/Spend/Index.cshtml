@model IEnumerable<MyEvernote.Entities.Spend>

@{
    ViewBag.Title = "Harcamalar";
}

<section id="multiple-table">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-info">
                        <h4 class="card-title">@Bootstrap.LinkButton("/Spend/Create", "primary", string.Empty, string.Empty, "plus", " Yeni")</h4>
                    </div>
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard">
                        <table id="dt-select" class="table table-striped table-bordered multiple-control-elements">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.People.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Category.CategoryType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Product)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Piece)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Price)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Result)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Zaman)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.People.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.CategoryType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Product)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Piece)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Result)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Zaman)
                                    </td>

                                    <td width="150">
                                        <a href="/Spend/Edit/@item.Id" class="btn btn-warning btn-xs" data-toggle="modal" data-target="#modal_comment" data-note-id="@item.Id">
                                            <span class="fa fa-edit"></span>
                                        </a>
                                        <a href="/Spend/Delete/@item.Id" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#modal_comment" data-note-id="@item.Id">
                                            <span class="fa fa-trash"></span>
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Multiple table control elements -->